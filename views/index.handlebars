<div class="container">
    <div class="row">
        <div class="col-4 burgers-list">
            <h5 class="text-center">Menu</h5>
            <hr>
            <ul class="list-group">
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block devour=true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-4 text-center mt-5">
            <h1 class="display-4"><strong>Eat-Da-Burger</strong></h1>
            <img src="../public/assets/image/burger.png" class="img-fluid" alt="stacked Burger">
            <h2 class="mt-5">Hungry?</h2>
            <form id="burger-form">
                <div class="form-group">
                    <label for="burger-input">Add a Burger to your Menu</label>
                    <input type="text" class="form-control" id="burger-input" required>
                </div>
                <button type="submit" class="btn btn-danger">Submit</button>
            </form>
        </div>
        <div class="col-4 burgers-list">
            <h5 class="text-center">Devoured Burgers</h5>
            <hr>
            <ul class="list-group">
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devour=false}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>