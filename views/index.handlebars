<div class="container">

    <!-- jumbotron -->
    <div class="jumbotron">
        <h1 id="jumboText">EAT DA BURGER</h1>
        <p id="jumboText">Please check out our Menu</p>
        <p id="jumboText">Don't like what we have? Add more to it...</p>
        <br><img width="150" alt="EatDaBurger"
            src="https://mir-s3-cdn-cf.behance.net/project_modules/disp/25c0cc62056547.5a8347d61e33b.gif">
        <h2 id="jumboText">Hungry?</h2>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger" id="jumboText">New Burger</label>
                    <input type="text" id="newburger" name="burger">


                    <button type="submit" class="btn btn-success" id="addburger"><span
                            class="fas fa-hamburger"></span></button>
                </div>
            </form>
        </panel>
    </div>

    <div class="row">

        <!-- Menu side -->
        <div class="col-sm-6" id="burgerStatusArea">
            <div class="panel panel-default">
                <div class="panel-heading" id="burgerOrders">Menu</div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                        <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fas fa-utensils"></span></button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>

        <!-- Burgers Eaten side -->
        <div class="col-sm-6" id="burgerStatusArea">
            <div class="panel panel-default">
                <div class="panel-heading" id="burgersEaten">Burger Eaten</div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                        <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>